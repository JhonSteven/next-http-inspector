{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node"
    },
    "include": ["src"]
  }
  