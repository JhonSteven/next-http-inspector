{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "lib": ["ES2021", "DOM"],
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  